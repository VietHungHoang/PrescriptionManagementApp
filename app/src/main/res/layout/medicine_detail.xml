<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ScrollView để có thể cuộn toàn bộ màn hình -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thanh tiêu đề -->

            <!-- Tên thuốc -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Nút quay lại -->

                <!-- Tiêu đề căn giữa -->

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="Back"
                    android:onClick="onBackPressed"
                    android:padding="8dp"
                    android:src="@drawable/dang_nutback"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView12"
                    app:layout_constraintHorizontal_bias="0.125"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="152dp"
                    android:gravity="center"
                    android:text="Chi Tiết"
                    android:textColor="#1E73BE"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.444" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panadol Extra"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#004AAD"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <!-- Ảnh thuốc -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="16dp">

                <!-- Nền xanh nhạt -->
                <View
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@drawable/background_for_medicine"
                    android:layout_gravity="center"
                    android:radius="20dp"/>

                <!-- Ảnh thuốc phía trước -->
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/panadol_extra"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
            </FrameLayout>



            <!-- Phần mô tả -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHỈ ĐỊNH"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_indications"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <!-- Cách dùng -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÁCH DÙNG"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_usage"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <!-- Lưu ý -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LƯU Ý"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_warning"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
